<!doctype html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="Lighthouse Lab intro to web development finstagram project">
        <meta name="keyword" content="HTML, CSS, RUBY">
        <title>Finstagram</title>
        <link rel="stylesheet" type="text/css" href="/stylesheets/normalize.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/lib.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    </head>
    <body>
        <header>
            <h1> 
                <a href="/">Finstagram</a>
            </h1>
            <div class="login-info">
                <% if current_user %>
                    <%= current_user.username %>
                    <a href="/logout">Logout</a>
                <% else %>
                    <a href="/login">Login</a>
                    <a href="/signup">Signup</a>
                <% end %>
            </div>
        </header>
        <main role="main">
            <%= yield %>
        </main>
    </body>
</html>